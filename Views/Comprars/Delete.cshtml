@model App1.Models.Comprar

@{
    ViewData["Title"] = "Apagar";
}

<h1>Apagar</h1>

<h3>Você quer apagar isto?</h3>
<div>
    <h4>Comprar</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FormaPagamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FormaPagamento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Data_Compra)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Data_Compra)
        </dd>
        <dt class = "col-sm-2">
