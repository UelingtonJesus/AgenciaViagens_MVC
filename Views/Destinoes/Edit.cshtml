@model App1.Models.Destino

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Destino</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id_Destino" />
            <div class="form-group">
                <label asp-for="Nome_Destino" class="control-label"></label>
                <input asp-for="Nome_Destino" class="form-control" />
                <span asp-validation-for="Nome_Destino" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hora_Voo" class="control-label"></label>
                <input asp-for="Hora_Voo" class="form-control" />
                <span asp-validation-for="Hora_Voo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
