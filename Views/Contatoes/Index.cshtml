@model IEnumerable<App1.Models.Contato>

@{
    ViewData["Title"] = "Início";
}

<h1 class="text-center titulo">Contate-nos</h1>

<p>
    <a asp-action="Create">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mensagem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mensagem)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_Contato">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id_Contato">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_Contato">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
