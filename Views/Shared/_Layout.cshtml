<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="~/css/style.css">
  
  <title>AgenciaViagens</title>
</head>
<body>
 <header>
    <nav class="navbar navbar-light">
      <div>
        <img class="rounded-circle" src="~/img/logo.png" width="70px" alt="Logo da Loja">
        <a class="navbar-brand text-white" href="index.html">Agencia Viagens</a>
      </div>
      <ul class="nav">
        <li class="nav-item">
          <a class="nav-link" asp-action="Index" asp-controller="Home">Início</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" asp-action="Index" asp-controller="Destinoes">Destinos</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" asp-action="Promocoes" asp-controller="Home">Promoções</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" asp-action="Index" asp-controller="Contatoes">Contato</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" asp-action="Index" asp-controller="Clientes">Cadastro</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" asp-action="Index" asp-controller="Comprars">Comprar</a>
        </li>
      </ul>


    </nav>
  </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

  <footer>
    <center>
      
        <p id="FormasPagamento"><b>Formas de pagamento:</b></p>
        <img width="300" src="~/img/pagamentos-bandeiras-01.png" alt="Formas de pagamento" />
      
    </center>
    <div class="container-fluid footer p-3 text-center ">
      <div class="row">
        <div class="col-sm-12 text-white">

          <p class="mb-0">&copy; Agencia Viagens</p>
        </div>
      </div>
    </div>
  </footer>
  <script  src="~/js/script.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>

  
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
